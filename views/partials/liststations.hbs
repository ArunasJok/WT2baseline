
{{#each stations}}

    <section class="ui stacked segment">
        <h2 class="ui header">
            <span style="display:block; height: 10px;"></span>
            {{name}}
            <a href="/station/{{id}}" >
                <div class="large ui blue animated right floated button" tabindex="0">
                    <div class="visible content">View older data</div>
                    <div class="hidden content">
                        <i class="right arrow icon"></i>
                    </div>
                </div>
            </a>
            <a href="/dashboard/deletestation/{{id}}" >
                <div class="large ui animated fade right floated button" tabindex="0">
                    <div class="visible content">Remove Station</div>
                    <div class="hidden content" style="color: red">
                        Are you sure?
                    </div>
                </div>
            </a>
        </h2>

    </section>
    <span style="display:block; height: 10px;"></span>
        <div class="ui inverted five cards">
            <div class="ui blue raised link card">
                <div class="content">
                    <div class="header">
                        {{name}}
                        <div class="right floated content">
                            <i class="blue map marked alternate icon" style="font-size: 2.5em;"></i>
                        </div>
                    </div>
                    <span style="display:block; height: 60px;"></span>
                    <div class="header">
                        <div class="left floated content">
                            Latitude {{latitudeRounded}}
                        </div>
                        <div class="left floated content">
                            Longitude {{longitudeRounded}}
                        </div>
                    </div>
                </div>
            </div>
            <div class="ui blue raised link card">
                <div class="content">
                    <div class="header">
                        Weather
                        <div class="right floated">
                            <i class="large blue cloud sun rain icon" style="font-size: 2.5em;"></i>
                        </div>
                        <span style="display:block; height: 60px;"></span>
                        <div class="right floated content">
                            <h3>
                                <div class="right aligned description">
                                    <p>
                                        {{weatherCode}}
                                    </p>
                                </div>
                            </h3>
                        </div>
                    </div>
                </div>
            </div>
            <div class="ui blue raised link card">
                <div class="content">
                    <div class="header">
                        Temperature
                        <span class="right floated">
                    <i class="large blue temperature high icon" style="font-size: 2.5em;"></i>
                </span>
                        <h3>
                            <div class="right aligned description">
                                {{temperature}} °C
                                <div>
                                    {{tempF}} °F
                                </div>
                                <h4>
                                    Min: {{minTemp.temperature}} °C
                                    <div></div>
                                    Max: {{maxTemp.temperature}} °C
                                </h4>
                            </div>
                        </h3>
                    </div>
                </div>
            </div>
            <div class="ui blue raised link card">
                <div class="content">
                    <div class="header">
                        Wind
                        <span class="right floated">
                            <i class="large blue fan icon" style="font-size: 2.5em;"></i>
                        </span>
                        <h3>
                            <div class="right aligned description">
                                {{windBeaufort}}bft
                            </div>
                            <div class="right aligned description">
                                {{windDirectionText}}
                            </div>
                            <div class="right aligned description">
                                Feels like  {{windChill}}°C
                            </div>
                            <div class="right aligned description">

                                <h4>
                                    Min: {{minWind.windSpeed}}
                                    <div></div>
                                    Max: {{maxWind.windSpeed}}
                                </h4>
                            </div>

                        </h3>
                    </div>
                </div>
            </div>
            <div class="ui blue raised link card">
                <div class="content">
                    <div class="header">
                        Pressure
                        <span class="right floated">
                            <i class="large blue compress arrows alternate icon" style="font-size: 2.5em;"></i>
                </span>
                        <h3>
                            <div class="right aligned description">

                                {{pressure}}hpa
                                <h4>
                                    Min: {{minPressure.pressure}}
                                    <div></div>
                                    Max: {{maxPressure.pressure}}
                                </h4>
                            </div>
                        </h3>
                    </div>
                </div>
            </div>
        </div>
        <span style="display:block; height: 20px;"></span>
{{/each}}
