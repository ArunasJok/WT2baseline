<form class="ui inverted stacked segment form" action="/dashboard/addstation" method="POST">
    <div class="field">
        <label>Add New Station</label>
        <input placeholder="New Station Name" type="text" name="name">
    </div>
    <div class="field">
        <label>Add latitude</label>
        <input placeholder="Latitude" type="number" step="0.0001" name="latitude">
    </div>
    <div class="field">
        <label>Add longitude</label>
        <input placeholder="Longitude" type="number" step="0.0001" name="longitude">
    </div>
    <button class="ui blue submit button">Add Station</button>
</form>
{{>footer}}